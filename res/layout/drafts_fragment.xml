<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff" >
    <LinearLayout 
        android:id="@+id/no_drafts_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp">
		<TextView android:id="@+id/no_drafts_text" 
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content" 
        	android:text="@string/no_drafts_listed"
        	android:textColor="@color/wikicleta_blue"
        	android:textSize="15sp"
			android:gravity="center" />
    </LinearLayout>

	<ListView
        android:id="@+id/drafts_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:divider="@color/wikicleta_light_blue"
        android:dividerHeight="0.2dp">
    </ListView>
</LinearLayout>