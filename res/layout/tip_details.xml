<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >


    <LinearLayout android:id="@+id/menu_layout_overlay"
	    android:orientation="vertical"
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent">
		<RelativeLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/menu_item_selector">
		    
		    <ImageView android:id="@+id/dialog_close"
		        android:contentDescription="@string/none"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/dialog_close_icon"/>

		    <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_toRightOf="@+id/dialog_close"
		        android:layout_alignParentRight="true"
		        android:layout_centerVertical="true"
		        
		        android:gravity="right" >

		        <TextView
		            android:id="@+id/tip_category_title"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:gravity="right"
		            android:text="@string/none"
		            android:textColor="#203b50"
		            android:textSize="20sp"
		            android:layout_gravity="center_horizontal"
		            android:layout_marginRight="15dp"
		            android:textStyle="bold" />

		        <ImageView
		            android:id="@+id/tip_category_icon"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:contentDescription="@string/none"
		            android:gravity="right"
		            android:layout_marginRight="10dp"
		            android:scaleType="fitXY" />
		    </LinearLayout>

		</RelativeLayout>
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:layout_marginLeft="10dp"
		    android:layout_marginTop="20dp"
		    android:layout_marginBottom="20dp"
		    >
		    <TextView
	           android:layout_width="fill_parent"
	           android:layout_height="wrap_content"
	           android:text="@string/tip"
	           android:textColor="@color/wikicleta_orange"
	           android:textSize="16sp"
	           android:paddingLeft="10dp"
	           android:paddingRight="10dp"
	           android:textAllCaps="true"
	           android:textStyle="bold" />
		    <TextView
	           android:id="@+id/tip_contents"
	           android:layout_width="fill_parent"
	           android:layout_height="wrap_content"
	           android:text="@string/none"
	           android:textColor="#203b50"
	           android:textSize="16sp"
	           android:paddingLeft="10dp"
	           android:paddingRight="10dp"
	           android:textStyle="bold" />

		</LinearLayout>
			<RelativeLayout 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@color/wikicleta_lightest_orange"
		android:gravity="right">
		    

	    <LinearLayout 
	        android:id="@+id/text_tip_container"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingBottom="10dp"
			android:paddingTop="10dp"
			android:paddingRight="5dp">
	          <TextView
	           android:id="@+id/tip_creator"
	           android:layout_width="fill_parent"
	           android:layout_height="wrap_content"
	           android:text="@string/none"
	           android:textColor="#203b50"
	           android:textSize="13sp"
	           android:paddingLeft="10dp"
	           android:paddingRight="10dp"
	           android:gravity="right"
	           android:textStyle="bold" />
	          <TextView
	           android:id="@+id/tip_created_date"
	           android:layout_width="fill_parent"
	           android:layout_height="wrap_content"
	           android:text="@string/none"
	           android:textColor="#203b50"
	           android:textSize="11sp"
	           android:gravity="right"
	           android:paddingLeft="10dp"
	           android:paddingRight="10dp"
	           android:textStyle="bold" />
	    </LinearLayout>

	    <ImageView
	        android:id="@+id/tip_creator_pic"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="15dp"
	        android:layout_toRightOf="@+id/text_tip_container"
	        android:contentDescription="@string/none"
	        android:src="@drawable/profile_placeholder_avatar_mini" />


		</RelativeLayout>
		<LinearLayout 
		    android:layout_height="1dp"
		    android:layout_width="fill_parent"
		    android:background="@color/wikicleta_light_blue"></LinearLayout>
		<LinearLayout 
		    android:id="@+id/action_buttons_container"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@color/wikicleta_white"
			android:orientation="horizontal"
			android:baselineAligned="false">
		    <LinearLayout 
		        android:id="@+id/modify_button_container"
		        android:layout_width="0px"
		        android:layout_weight="1"
		        android:layout_height="wrap_content"
		        android:background="@drawable/menu_item_selector"
		        android:gravity="center"
		        android:padding="14dp">
		        <TextView
	           		android:id="@+id/button_modify"
	           		android:layout_width="wrap_content"
	           		android:layout_height="wrap_content"
	           		android:text="@string/actions.modify"
	           		android:textColor="@color/wikicleta_orange"
	           		android:textSize="16sp"
	           		android:paddingLeft="10dp"
	           		android:paddingRight="10dp"
	           		android:textStyle="bold" />
		    </LinearLayout>
		    <LinearLayout 
		        android:id="@+id/delete_button_container"
		        android:layout_width="0px"
		        android:layout_weight="1"
		        android:layout_height="wrap_content"
		        android:gravity="center"
		        android:background="@drawable/menu_item_selector"
		        android:padding="14dp">
		        <TextView
	           		android:id="@+id/button_delete"
	           		android:layout_width="wrap_content"
	           		android:layout_height="wrap_content"
	           		android:text="@string/actions.delete"
	           		android:textColor="@color/wikicleta_orange"
	           		android:textSize="16sp"
	           		android:paddingLeft="10dp"
	           		android:paddingRight="10dp"
	           		android:textStyle="bold" />
		    </LinearLayout>
		</LinearLayout>
	</LinearLayout>

</RelativeLayout>