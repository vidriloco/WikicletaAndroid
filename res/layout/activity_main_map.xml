<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout 
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">

  <com.markupartist.android.widget.ActionBar
	    xmlns:app="http://schemas.android.com/apk/res/org.wikicleta"
	    android:id="@+id/actionbar"
	    app:title="@string/map_section"
	    style="@style/ActionBar"/>
  
  <LinearLayout
    android:id="@+id/map_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/actionbar"
    android:layout_above="@+id/toolbar">
  	<fragment
  	    android:name="com.google.android.gms.maps.SupportMapFragment"
        android:id="@+id/map_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

      	android:clickable="true"
        class="com.google.android.gms.maps.MapFragment" />
  </LinearLayout>

    
  <LinearLayout
       android:id="@+id/toolbar"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_alignParentBottom="true"
       android:gravity="center"
       android:background="@drawable/toolbar"
       android:padding="5dp"
       android:clickable="true" >
		<LinearLayout 
            android:id="@+id/map_add_button"
       		android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
       		android:orientation="vertical"
           	android:layout_marginRight="20dp"
           	android:layout_marginLeft="20dp"
           	android:gravity="center"
           	android:clickable="true" >
           	<ImageView
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:contentDescription="@string/nothing"
            	android:src="@drawable/add" />

            <TextView 
	            android:id="@+id/bar_maps_add_button_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="12sp"
	            android:layout_marginTop="5dp"
	            android:textColor="@color/wikicleta_blue"
	            android:text="@string/bar_maps_add_button_text_value"
	            />
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/centermap_search_button"
       		android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
       		android:orientation="vertical"
           	android:layout_marginRight="20dp"
           	android:layout_marginLeft="20dp"
           	android:gravity="center"
           	android:clickable="true">
           	<ImageView
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:contentDescription="@string/nothing"
            	android:src="@drawable/centermap" />
            
            <TextView 
	            android:id="@+id/centermap_button_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="12sp"
	            android:layout_marginTop="5dp"
	            android:textColor="@color/wikicleta_blue"
	            android:text="@string/bar_center_map_text_value"
	            />

        </LinearLayout>
		
        <LinearLayout 
            android:id="@+id/centermap_search_button_enabled"
       		android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
       		android:orientation="vertical"
           	android:layout_marginRight="20dp"
           	android:layout_marginLeft="20dp"
           	android:gravity="center"
           	android:clickable="true"
            android:visibility="gone" >
           	<ImageView
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:contentDescription="@string/nothing"
            	android:src="@drawable/centermap_enabled" />
            
            <TextView 
	            android:id="@+id/centermap_button_enabled_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="12sp"
	            android:layout_marginTop="5dp"
	            android:textColor="@color/wikicleta_blue"
	            android:text="@string/bar_center_map_enabled_text_value"
	            />

        </LinearLayout>
        <LinearLayout 
            android:id="@+id/map_layers_button"
       		android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
       		android:orientation="vertical"
           	android:layout_marginRight="20dp"
           	android:layout_marginLeft="20dp"
           	android:gravity="center"
           	android:clickable="true" >
           	<ImageView
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:contentDescription="@string/nothing"
            	android:src="@drawable/layers" />

            <TextView 
	            android:id="@+id/bar_maps_layers_button_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="12sp"
	            android:layout_marginTop="5dp"
	            android:textColor="@color/wikicleta_blue"
	            android:text="@string/bar_maps_layers_button_text_value"/>

        </LinearLayout>


		<ImageView
            android:id="@+id/reloading_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/nothing"
            android:src="@drawable/reloading_icon"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:clickable="true"
            android:visibility="gone" />
		
  </LinearLayout>
</RelativeLayout>