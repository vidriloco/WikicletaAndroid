<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/contact_item_selector"
    android:padding="10dp">
    <RelativeLayout android:id="@+id/event_picture_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp">
       	<ImageView android:id="@+id/event_picture"
	        android:contentDescription="@string/none"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:src="@drawable/cycling_group_logo_mini"
	        android:layout_centerHorizontal="true" />
    </RelativeLayout>
    
    <LinearLayout android:id="@+id/event_details_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

       	<TextView
       	    android:id="@+id/event_kind_text"
       	    android:layout_width="fill_parent"
       	    android:layout_height="wrap_content"
       	    android:gravity="left"
       	    android:text="Grupo ciclista"
       	    android:textColor="@color/wikicleta_blue"
       	    android:textSize="11sp"
       	    android:textAllCaps="true" />
       	
       	<TextView
       	    android:id="@+id/event_name_text"
       	    android:layout_width="fill_parent"
       	    android:layout_height="wrap_content"
       	    android:gravity="left"
       	    android:text="Bicitekas"
       	    android:textColor="@color/wikicleta_orange"
       	    android:textSize="18sp"
       	    android:textStyle="bold" />

       	<TextView
       	    android:id="@+id/event_days_to_text"
       	    android:layout_width="fill_parent"
       	    android:layout_height="wrap_content"
       	    android:gravity="left"
       	    android:text="En 3 dias"
       	    android:textColor="@color/wikicleta_blue"
       	    android:textSize="16sp"
       	    android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>
