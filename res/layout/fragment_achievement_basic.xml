<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp" >
    <ScrollView
       android:layout_width="match_parent"
       android:layout_height="fill_parent" >
        
		<LinearLayout 
		    android:layout_width="match_parent"
       		android:layout_height="fill_parent"
       		android:orientation="vertical" >
			<LinearLayout
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:background="@drawable/white_shadows"
		    	android:orientation="vertical"
		    	android:layout_gravity="center_horizontal"
		    	android:layout_marginTop="30dp" >
		    
	           <ImageView android:layout_width="wrap_content"
		  			android:layout_height="wrap_content"
		  			android:id="@+id/achievement_icon"
		  			android:src="@drawable/mountain_conqueror_icon"
		  			android:padding="5dp"
		  			android:contentDescription="@string/none" />
	   		</LinearLayout>
	   	
			<TextView
	       		android:id="@+id/achievement_title"
	       		android:layout_width="fill_parent"
	       		android:layout_height="wrap_content"
	       		android:text="MontaÃ±ero"
	       		android:textColor="@color/wikicleta_blue"
	       		android:textSize="20sp"
	       		android:textStyle="bold"
	       		android:layout_marginTop="15dp"
	       		android:textAlignment="center"
	       		android:gravity="center"
				android:layout_marginBottom="20dp" />
			
			<include layout="@layout/thin_separator" android:id="@+id/separator_one" />
			<LinearLayout 
			    android:id="@+id/challenge_status"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:weightSum="2">
			    <LinearLayout 
			        android:id="@+id/challenge_category_points_container"
			        android:layout_width="0px"
			        android:layout_weight="1"
			        android:layout_height="match_parent"
			        android:gravity="center"
			        android:padding="10dp"
			        android:clickable="true"
			        android:background="@drawable/background_selector"
			        android:orientation="vertical">
			        <TextView
			       		android:id="@+id/achievement_scoring_value"
			       		android:layout_width="fill_parent"
			       		android:layout_height="wrap_content"
			       		android:text="50/100"
			       		android:textColor="@color/wikicleta_orange"
			       		android:textSize="22sp"
			       		android:textStyle="bold"
			       		android:layout_marginTop="10dp"
			       		android:textAlignment="center"
			       		android:gravity="center" />
					<TextView
			       		android:id="@+id/achievement_scoring_text"
			       		android:layout_width="fill_parent"
			       		android:layout_height="wrap_content"
			       		android:text="@string/challenges_category_text"
			       		android:textColor="@color/wikicleta_blue"
			       		android:textSize="12sp"
			       		android:textStyle="bold"
			       		android:textAllCaps="true"
			       		android:textAlignment="center"
			       		android:gravity="center" />
			    </LinearLayout>
		
			    <LinearLayout 
			        android:id="@+id/challenges_active_category_container"
			        android:layout_width="0px"
			        android:layout_weight="1"
			        android:layout_height="match_parent"
			        android:gravity="center"
			        android:clickable="true"
			        android:background="@drawable/background_selector"
			        android:orientation="vertical">
			        <TextView
			       		android:id="@+id/challenges_events_discover"
			       		android:layout_width="fill_parent"
			       		android:layout_height="wrap_content"
			       		android:text="@string/challenges_events_discover_text"
			       		android:textColor="@color/wikicleta_orange"
			       		android:textSize="22sp"
			       		android:textStyle="bold"
			       		android:layout_marginTop="10dp"
			       		android:textAlignment="center"
			       		android:gravity="center" />
					<TextView
			       		android:id="@+id/challenges_events_now"
			       		android:layout_width="fill_parent"
			       		android:layout_height="wrap_content"
			       		android:text="@string/challenges_events_now_text"
			       		android:textColor="@color/wikicleta_blue"
			       		android:textSize="12sp"
			       		android:textStyle="bold"
			       		android:textAllCaps="true"
			       		android:textAlignment="center"
			       		android:gravity="center" />
			    </LinearLayout>
			</LinearLayout>
			<include layout="@layout/thin_separator" android:id="@+id/separator_two" />
			
		</LinearLayout>
		
    </ScrollView>
</LinearLayout>
