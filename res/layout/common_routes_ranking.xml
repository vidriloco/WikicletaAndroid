<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/route_rankings_container"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:baselineAligned="false"
	android:gravity="center"
	android:paddingTop="10dp"
    android:paddingBottom="10dp"
	android:weightSum="3">
    <LinearLayout 
        android:id="@+id/route_security_container"
        android:layout_width="0px"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/background_selector"
        android:clickable="true"
        android:padding="7dp">
        <include layout="@layout/common_ranking_values" android:id="@+id/ranking_values" />

        <TextView
            android:id="@+id/route_security_value_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/route_security_value"
            android:textColor="@color/wikicleta_blue"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout 
        android:id="@+id/route_fast_container"
        android:layout_width="0px"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:clickable="true"
        android:background="@drawable/background_selector"
        android:padding="7dp">
        <include layout="@layout/common_ranking_values" android:id="@+id/ranking_values" />

        <TextView
            android:id="@+id/route_fast_value_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/route_fast_value"
            android:textColor="@color/wikicleta_blue"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout 
        android:id="@+id/route_comfort_container"
        android:layout_width="0px"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:clickable="true"
        android:background="@drawable/background_selector"
        android:padding="7dp">
       	<include layout="@layout/common_ranking_values" android:id="@+id/ranking_values" />

        <TextView
            android:id="@+id/route_comfort_value_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/route_comfort_value"
            android:textColor="@color/wikicleta_blue"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>
