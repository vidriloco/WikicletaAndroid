<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ECECE7" >
	<LinearLayout 
        android:id="@+id/unsynced_routes_group"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:paddingTop="10dp"
        android:layout_margin="3dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:background="#FF4A2B">
         
		<RelativeLayout 
		    android:layout_width="fill_parent"
            android:layout_height="wrap_content">
             <TextView
            android:id="@+id/unsynced_route_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:shadowColor="#1111"
            android:shadowDx="1.5"
            android:shadowDy="1.5"
            android:shadowRadius="1.3"
            android:textColor="#fff"
            android:textSize="15sp"
            android:text="@string/none"
            android:textAllCaps="true"
            android:textStyle="bold" />
		    <ImageView
             android:id="@+id/route_resyncer"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_marginRight="28dp"
             android:contentDescription="@string/none"
             android:src="@drawable/reload_small" />
		</RelativeLayout> 

    </LinearLayout>
    <LinearLayout     
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content">
		<ListView
        	android:id="@+id/list_unsynced"
        	android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
        	android:divider="@color/wikicleta_white"
        	android:dividerHeight="0.5dp"
        	android:visibility="gone" >
    	</ListView>
    </LinearLayout>
    

    <LinearLayout 
        android:id="@+id/empty_routes_group"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:paddingTop="10dp"
        android:layout_margin="3dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:background="#fff"
        android:visibility="gone">
         <TextView
            android:id="@+id/empty_routes_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:shadowColor="#1111"
            android:shadowDx="1.5"
            android:shadowDy="1.5"
            android:shadowRadius="1.3"
            android:textColor="#3D3D3D"
            android:textSize="13sp"
            android:text="@string/empty_routes_title"
            android:textStyle="bold" />

    </LinearLayout>
    <ListView
        android:id="@+id/list_synced"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:divider="@color/wikicleta_blue"
        android:dividerHeight="0.5dp"
        android:visibility="gone">
    </ListView>
</LinearLayout>