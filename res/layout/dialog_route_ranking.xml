<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/wikicleta_lightest_blue" >
	<RelativeLayout 
        android:layout_width="fill_parent"
       	android:layout_height="wrap_content"
       	android:orientation="horizontal">
       	<LinearLayout 
       	    android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
       		android:padding="5dp"
       		android:gravity="center"
       		android:layout_alignParentLeft="true"
       		android:layout_toLeftOf="@+id/route_kms_container">
       	   <TextView
           android:id="@+id/route_name_text"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Ruta"
           android:padding="7dp"
           android:layout_alignParentLeft="true"
           android:layout_gravity="center_horizontal"
           android:textColor="@color/wikicleta_blue"
           android:textSize="18sp"
           android:textStyle="bold" /> 
       	</LinearLayout>
       	<LinearLayout 
       	    android:id="@+id/route_kms_container"
       	    android:layout_width="80dp"
       		android:layout_height="wrap_content"
       		android:padding="5dp"
       		android:layout_alignParentRight="true"
       		android:gravity="center"
       		android:background="@color/wikicleta_blue">

       		<TextView
       		    android:id="@+id/route_kms_text"
       		    android:layout_width="wrap_content"
       		    android:layout_height="wrap_content"
       		    android:text="12 km"
       		    android:textColor="@color/wikicleta_white"
       		    android:textSize="13sp"
       		    android:textStyle="bold" />
 
       	</LinearLayout>
    </RelativeLayout>
    
	<include layout="@layout/thin_separator" android:id="@+id/separator_one" />
	<include layout="@layout/common_routes_ranking" android:id="@+id/routes_ranking" />
    <include layout="@layout/thin_separator" android:id="@+id/separator_two" />
  	<LinearLayout 
	    android:id="@+id/instructions_container"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center"
		android:baselineAligned="false"
		android:padding="10dp">
	    <TextView
        	android:id="@+id/ranking_instructions_text"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/route_ranking_instructions_text"
        	android:textColor="@color/wikicleta_blue"
        	android:gravity="center"
        	android:textSize="14sp" />
  	</LinearLayout>
  	
	<include layout="@layout/thin_separator" android:id="@+id/separator_three" />
	<LinearLayout 
	    android:id="@+id/route_rankings_container"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:baselineAligned="false"
		android:gravity="center"
		android:weightSum="2">
	    <LinearLayout 
	        android:id="@+id/return_button_container"
	        android:layout_width="0px"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:orientation="vertical"
	        android:background="@drawable/background_selector"
	        android:clickable="true"
	        android:gravity="center"
		    android:padding="14dp">
	
	        <TextView
	            android:id="@+id/button_return_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/actions.return"
	            android:textColor="@color/wikicleta_orange"
	            android:textSize="16sp"
	            android:textStyle="bold" />
	
	    </LinearLayout>
	    <LinearLayout 
	        android:id="@+id/save_button_container"
	        android:layout_width="0px"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:orientation="vertical"
	        android:background="@drawable/background_selector"
	        android:clickable="true"
	        android:gravity="center"
		    android:padding="14dp">
	
	        <TextView
	            android:id="@+id/button_save_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/actions.update"
	            android:textColor="@color/wikicleta_orange"
	            android:textSize="16sp"
	            android:textStyle="bold" />
	
	    </LinearLayout>
	</LinearLayout>
</LinearLayout>
