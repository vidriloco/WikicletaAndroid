<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".LoginActivity" >
	
    <com.markupartist.android.widget.ActionBar
    	xmlns:app="http://schemas.android.com/apk/res/org.wikicleta"
    	android:id="@+id/actionbar"
    	app:title="@string/tips_saving_title"
    	style="@style/ActionBar"/>
	
	<ScrollView
        android:id="@+id/tips_saving_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="53dp" >

		   <LinearLayout
		       style="@style/LoginFormContainer"
		       android:layout_width="match_parent"
		       android:layout_height="292dp"
		       android:background="#fff"
		       android:orientation="vertical" >
		       
			   <TextView
			       android:id="@+id/tipCategoryInstructions"
			       android:layout_width="match_parent"
			       android:layout_height="wrap_content"
			       android:textSize="16sp"
			       android:text="@string/tips_category_select_instruction"
        		   android:layout_marginLeft="10dp"></TextView>
			   
		       <Spinner
        		android:id="@+id/tipCategorySelector"
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:layout_marginBottom="20dp" />
		       
		       <EditText
		           android:id="@+id/tips_content"
		           android:layout_width="match_parent"
		           android:layout_height="wrap_content"
		           android:maxLength="250"
		           android:ems="10"
		           android:hint="@string/tips_form_content_hint"
		           android:inputType="textMultiLine" >

		           <requestFocus />
		       </EditText>
            
            <Button
                android:id="@+id/save_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
				android:layout_marginTop="50dp"
				android:layout_marginBottom="20dp"
                android:text="@string/save" />
        	</LinearLayout>
        	        
    </ScrollView>
</merge>