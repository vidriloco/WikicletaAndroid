<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/map_container"
   android:layout_width="match_parent"
   android:layout_height="match_parent">
  <RelativeLayout
    android:id="@+id/map_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  	<fragment
  	    android:name="com.google.android.gms.maps.SupportMapFragment"
        android:id="@+id/map_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      	android:clickable="true"
        class="com.google.android.gms.maps.SupportMapFragment" />
  	 	<View
	  android:layout_width="match_parent"
	  android:layout_height="match_parent"
	  android:background="@android:color/transparent" />
  </RelativeLayout>
  
  <RelativeLayout 
	android:id="@+id/upper_control_group"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal">
    <LinearLayout 
        android:id="@+id/mutable_box_container"
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@drawable/background_rounded">
		<TextView
	         android:id="@+id/trip_name_text"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:text="Prueba de ruta"
	         android:textColor="@color/wikicleta_orange"
	         android:textSize="18sp" />
		<TextView
	         android:id="@+id/trip_days_to_event_text"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:textColor="@color/wikicleta_blue"
	         android:textSize="14sp"
	         android:textAllCaps="true" />
    </LinearLayout>
  </RelativeLayout>
    
  <RelativeLayout
       android:id="@+id/under_control_group"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_alignParentBottom="true"
       android:paddingBottom="50dp"
       android:clickable="false" >
	
      <LinearLayout 
		android:id="@+id/toggable_group"
        android:layout_width="wrap_content"
       	android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_toRightOf="@+id/left_menu_toggler"
		android:layout_marginLeft="15dp">
        <ImageView
          android:id="@+id/return_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="0dp"
          android:contentDescription="@string/nothing"
          android:src="@drawable/return_button_icon"
          android:clickable="true" />
        <ImageView
          android:id="@+id/flag_start_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="0dp"
          android:contentDescription="@string/nothing"
          android:src="@drawable/flag_start_button_icon"
          android:clickable="true" />
		<ImageView
          android:id="@+id/flag_finish_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="0dp"
          android:contentDescription="@string/nothing"
          android:src="@drawable/flag_end_button_icon"
          android:clickable="true" />
      </LinearLayout>

      <ImageView
          android:id="@+id/centermap_search_button_enabled"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_marginRight="10dp"
          android:clickable="true"
          android:contentDescription="@string/nothing"
          android:src="@drawable/locator_button_icon_enabled"
          android:visibility="gone" />
      <ImageView
          android:id="@+id/centermap_search_button_disabled"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_marginRight="10dp"
          android:clickable="true"
          android:contentDescription="@string/nothing"
          android:src="@drawable/locator_button_icon_disabled" />
  </RelativeLayout>

</RelativeLayout>
