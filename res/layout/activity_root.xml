<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gradient_blue"
    android:orientation="vertical" >
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_background"
        android:layout_centerVertical="true"
        android:contentDescription="@string/none" >
    </ImageView>
    
    <ImageView
        android:id="@+id/settings_launcher_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/settings_icon_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/none" >
    </ImageView>
    
    <RelativeLayout android:id="@+id/user_info_container"
		android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="10dp">
        
        <LinearLayout android:id="@+id/user_logged_in"
            android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:orientation="vertical">
        	
            <ImageView android:id="@+id/user_pic" 
            android:layout_width="@dimen/profile_avatar_width"
        	android:layout_height="@dimen/profile_avatar_width"
        	android:layout_gravity="center"
        	android:scaleType="fitXY"
        	android:adjustViewBounds="false"
        	android:src="@drawable/profile_placeholder_avatar" />
            
        	<TextView android:id="@+id/user_name"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginTop="10dp"
        	android:textColor="@color/wikicleta_blue"
        	android:textSize="25sp" />
        </LinearLayout>
        
       	<LinearLayout android:id="@+id/user_not_logged_in"
       	    android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_centerHorizontal="true"
        	android:visibility="gone">
            
        </LinearLayout>
    </RelativeLayout>
    
    <LinearLayout 
	    android:id="@+id/main_actions_for_profile"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:baselineAligned="false"
		android:layout_below="@id/user_info_container"
		android:weightSum="2">
	    <LinearLayout 
	        android:id="@+id/activity_container"
	        android:layout_width="0px"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:gravity="center"
	        android:orientation="horizontal"
	        android:clickable="true"
	        android:padding="10dp"
	        android:background="@drawable/contact_item_selector">

	        <TextView
          		android:id="@+id/activity_button_text"
          		android:layout_width="wrap_content"
          		android:layout_height="wrap_content"
          		android:textColor="@color/wikicleta_orange"
          		android:drawableTop="@drawable/activity_icon"
          		android:text="@string/activities_in_root"
          		android:drawablePadding="10dp"
          		android:textAllCaps="true"
          		android:textSize="13sp"
          		android:layout_marginLeft="10dp"
          		android:gravity="center_horizontal" />
	    </LinearLayout>
	
	    <LinearLayout 
	        android:id="@+id/achievements_container"
	        android:layout_width="0px"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:gravity="center"
	        android:orientation="horizontal"
	        android:clickable="true"
	        android:padding="10dp"
	        android:visibility="gone"
	        android:background="@drawable/contact_item_selector">

	        <TextView
          		android:id="@+id/achievements_button_text"
          		android:layout_width="wrap_content"
          		android:layout_height="wrap_content"
          		android:textColor="@color/wikicleta_orange"
          		android:drawablePadding="10dp"
          		android:drawableTop="@drawable/achievements_icon"
          		android:textSize="13sp"
          		android:layout_marginLeft="10dp"
          		android:text="@string/achievements_in_root"
          		android:gravity="center_horizontal"
          		android:textAllCaps="true" />
	    </LinearLayout>
		<LinearLayout 
	        android:id="@+id/favorites_container"
	        android:layout_width="0px"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:gravity="center"
	        android:orientation="horizontal"
	        android:clickable="true"
	        android:padding="10dp"
	        android:background="@drawable/contact_item_selector">

	        <TextView
          		android:id="@+id/favorites_button_text"
          		android:layout_width="wrap_content"
          		android:layout_height="wrap_content"
          		android:textColor="@color/wikicleta_orange"
          		android:drawablePadding="10dp"
          		android:drawableTop="@drawable/favorites_icon"
          		android:text="@string/favorites_in_root"
          		android:textSize="13sp"
          		android:layout_marginLeft="10dp"
          		android:gravity="center_horizontal"
          		android:textAllCaps="true" />
	    </LinearLayout>
	</LinearLayout>
	<LinearLayout android:id="@+id/separator"
	    android:layout_height="4dp"
	    android:layout_width="fill_parent"
	    android:background="@color/wikicleta_light_blue"
	    android:layout_below="@id/main_actions_for_profile"></LinearLayout>
	<ScrollView 
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_below="@id/separator"
    	android:layout_alignParentBottom="true">
    	<include layout="@layout/root_actions_menu" />
	</ScrollView>
	
</RelativeLayout>