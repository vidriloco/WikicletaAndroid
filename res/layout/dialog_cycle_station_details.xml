<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_layout_overlay"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
	<RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/background_selector">
	    
	    <ImageView android:id="@+id/dialog_close"
	        android:contentDescription="@string/none"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/dialog_close_icon"/>

	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/dialog_close"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:gravity="right" >

	        <TextView
	            android:id="@+id/bike_sharing_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="right"
	            android:text="@string/cycle_station"
	            android:textColor="#203b50"
	            android:textSize="20sp"
	            android:layout_gravity="center_vertical"
	            android:layout_marginRight="15dp"
	            android:textStyle="bold" />

	        <ImageView
	            android:id="@+id/bike_sharing_status"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:contentDescription="@string/none"
	            android:gravity="right"
	            android:src="@drawable/bike_sharing_icon"
	            android:layout_marginRight="10dp"
	            android:scaleType="fitXY" />
	    </LinearLayout>

	</RelativeLayout>
	<LinearLayout android:id="@+id/bike_sharing_title_container"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:padding="10dp"
	            android:gravity="center"
	            android:background="@color/wikicleta_white">
	    	 <TextView
	            android:id="@+id/cycle_station_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/cycle_station"
	            android:textColor="@color/wikicleta_orange"
	            android:textSize="14sp"
	            android:layout_gravity="center_vertical"
	            android:textAllCaps="true" />
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/cyclestation_stats_container"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@color/wikicleta_white"
		android:orientation="horizontal"
		android:baselineAligned="false">
	    <LinearLayout 
	        android:id="@+id/stats_bikes_container"
	        android:layout_width="0px"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:gravity="left"
	        android:padding="14dp"
	        android:orientation="vertical">
        	<TextView
           		android:id="@+id/bikes_number"
           		android:layout_width="wrap_content"
           		android:layout_height="wrap_content"
           		android:textColor="@color/wikicleta_orange"
           		android:textSize="20sp"
           		android:paddingLeft="10dp"
           		android:paddingRight="10dp"
           		android:textAllCaps="true" />
	        <TextView
           		android:id="@+id/bikes_text_for_number"
           		android:layout_width="wrap_content"
           		android:layout_height="wrap_content"
           		android:textColor="@color/wikicleta_blue"
           		android:textSize="13sp"
           		android:paddingLeft="10dp"
           		android:paddingRight="10dp"
           		android:textAllCaps="true"
           		android:text="@string/one_available_bike" />
	    </LinearLayout>
	    <LinearLayout 
	        android:id="@+id/stats_slots_container"
	        android:layout_width="0px"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:gravity="left"
	        android:padding="14dp"
	        android:orientation="vertical">
	        <TextView
           		android:id="@+id/slots_number"
           		android:layout_width="wrap_content"
           		android:layout_height="wrap_content"
           		android:textColor="@color/wikicleta_orange"
           		android:textSize="20sp"
           		android:paddingLeft="10dp"
           		android:paddingRight="10dp"
           		android:textAllCaps="true"/>
	        <TextView
           		android:id="@+id/slots_text_for_number"
           		android:layout_width="wrap_content"
           		android:layout_height="wrap_content"
           		android:textAllCaps="true"
           		android:text="@string/one_available_slot"
           		android:textColor="@color/wikicleta_blue"
           		android:textSize="13sp"
           		android:paddingLeft="10dp"
           		android:paddingRight="10dp" />
	    </LinearLayout>
	</LinearLayout>
	<include layout="@layout/thin_separator" android:id="@+id/separator_one" />
	<LinearLayout android:id="@+id/bike_sharing_distance_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center">
    	 <TextView
            android:id="@+id/cycle_station_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cycle_station"
            android:textColor="@color/wikicleta_blue"
            android:textSize="12sp"
            android:layout_gravity="center_vertical"
            android:textAllCaps="true" />
	</LinearLayout>
</LinearLayout>