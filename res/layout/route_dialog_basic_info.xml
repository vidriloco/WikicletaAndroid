<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"
       android:orientation="vertical" >

    <RelativeLayout 
        android:layout_width="fill_parent"
       	android:layout_height="wrap_content"
       	android:orientation="horizontal">
       	<LinearLayout 
       	    android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
       		android:padding="5dp"
       		android:gravity="center"
       		android:layout_alignParentLeft="true"
       		android:layout_toLeftOf="@+id/route_kms_container">
       	   <TextView
           android:id="@+id/route_name_text"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Ruta"
           android:padding="7dp"
           android:layout_alignParentLeft="true"
           android:layout_gravity="center_horizontal"
           android:textColor="@color/wikicleta_blue"
           android:textSize="18sp"
           android:textStyle="bold" /> 
       	</LinearLayout>
       	<LinearLayout 
       	    android:id="@+id/route_kms_container"
       	    android:layout_width="80dp"
       		android:layout_height="wrap_content"
       		android:padding="5dp"
       		android:layout_alignParentRight="true"
       		android:gravity="center"
       		android:background="@color/wikicleta_blue">

       		<TextView
       		    android:id="@+id/route_kms_text"
       		    android:layout_width="wrap_content"
       		    android:layout_height="wrap_content"
       		    android:text="12 km"
       		    android:textColor="@color/wikicleta_white"
       		    android:textSize="13sp"
       		    android:textStyle="bold" />
 
       	</LinearLayout>
    </RelativeLayout>
		
       <TextView
           android:id="@+id/route_details_text"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
           android:padding="10dp"
           android:text="Una super ruta"
           android:layout_marginTop="10dp"
           android:textColor="@color/wikicleta_orange"
           android:textSize="15sp"
           android:textStyle="bold"
           android:layout_margin="8dp" />
</LinearLayout>