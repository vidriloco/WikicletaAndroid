<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"
       android:orientation="vertical" >

    <LinearLayout 
        android:layout_width="fill_parent"
       	android:layout_height="wrap_content"
       	android:orientation="horizontal">
       	<RelativeLayout 
       	    android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
       		android:padding="5dp"
       		android:layout_marginLeft="5dp"
       		android:layout_marginRight="5dp">
       	   <TextView
           android:id="@+id/route_name_text"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Ruta"
           android:layout_alignParentLeft="true"
           android:layout_gravity="center_horizontal"
           android:textColor="@color/wikicleta_blue"
           android:textSize="18sp"
           android:textStyle="bold" /> 
       	</RelativeLayout>
       	<RelativeLayout 
       	    android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
       		android:paddingTop="5dp"
       		android:paddingBottom="5dp"
       		android:paddingRight="10dp"
       		android:background="@color/wikicleta_blue">
       	   <TextView
           android:id="@+id/route_kms_text"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="12 km"
           android:layout_alignParentRight="true"
           android:layout_gravity="center_horizontal"
           android:textColor="@color/wikicleta_white"
           android:textSize="18sp"
           android:textStyle="bold" /> 
       	</RelativeLayout>
    </LinearLayout>
		
       <TextView
           android:id="@+id/route_details_text"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
           android:text="Una super ruta"
           android:layout_marginTop="10dp"
           android:textColor="@color/wikicleta_orange"
           android:textSize="15sp"
           android:textStyle="bold"
           android:layout_margin="8dp" />
</LinearLayout>