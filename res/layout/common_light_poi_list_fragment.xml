<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout 
        android:id="@+id/loading_view"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:gravity="center">

        <ImageView
            android:id="@+id/spinner_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/spinner_big" />

    </LinearLayout>
	<RelativeLayout 
	    android:id="@+id/attempt_reload_view"
	    android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/selected_point_container"
        android:layout_above="@+id/new_comment_action"
        android:visibility="gone">
	   	<ImageView
		    android:id="@+id/attempt_reload_image"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerInParent="true"
		    android:contentDescription="@string/none"
		    android:scaleType="fitXY"
		    android:src="@drawable/reload_icon" />
	   	<TextView 
	   	    android:id="@+id/attempt_reload_text" 
	   	    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/attempt_reload_image"
		    android:layout_centerHorizontal="true"
		    android:textColor="@color/wikicleta_blue"
		    android:text="@string/attempt_reload_text"
		    android:layout_marginTop="20dp" />
	</RelativeLayout>
    
    
    <LinearLayout 
        android:id="@+id/empty_list"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		   
        <LinearLayout 
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:gravity="center"
		android:orientation="vertical">
			<ImageView 
			    android:id="@+id/empty_light_list_icon"
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/favorites_icon_big" />
			<TextView
	        android:id="@+id/empty_light_list_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/favorites_empty_list"
	        android:textColor="@color/wikicleta_orange"
	        android:textSize="20sp"
	        android:textStyle="bold" />
        </LinearLayout>

	</LinearLayout>
    <ListView
   		android:id="@+id/light_pois_list"
   		android:layout_width="fill_parent"
   		android:layout_height="wrap_content"
   		android:listSelector="@drawable/transparent_selector"
   		android:fadeScrollbars="true"
   		android:clickable="false"
   		android:dividerHeight="0dp"
		android:divider="@null"
   		android:fastScrollEnabled="true"
   		android:focusable="true"
   		android:focusableInTouchMode="true"
   		android:scrollbarFadeDuration="100"
   		android:scrollbars="vertical" />

    

</LinearLayout>
    