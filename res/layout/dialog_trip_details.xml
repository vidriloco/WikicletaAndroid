<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout android:id="@+id/trip_container"
	    android:orientation="vertical"
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    android:padding="20dp"
	    android:background="@color/wikicleta_white">
        
        <LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="@drawable/white_shadows"
		    android:orientation="vertical"
		    android:layout_gravity="center_horizontal" >
		    
            <ImageView android:layout_width="wrap_content"
		  		android:layout_height="wrap_content"
		  		android:id="@+id/pic_image"
		  		android:padding="2dp"
		  		android:contentDescription="@string/none" />
    	</LinearLayout>
        
	    <TextView
	       android:id="@+id/trip_name_text"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:text="Paseo Dominical"
           android:textColor="@color/wikicleta_orange"
           android:textSize="18sp"
           android:layout_marginTop="10dp"
           android:textAlignment="center"
           android:gravity="center" />
	    <TextView
           android:id="@+id/trip_next_date_text"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:text="@string/cycling_group_unknown_remaining_days_for_ride"
           android:textColor="@color/wikicleta_blue"
           android:textSize="14sp"
           android:textAlignment="center"
           android:gravity="center" />

	</LinearLayout>
	<include layout="@layout/thin_separator" android:id="@+id/separator_simple" />
    <LinearLayout
        android:id="@+id/trip_details"
	    android:orientation="vertical"
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    android:padding="10dp">
		<TextView
           android:id="@+id/trip_details_text"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:textColor="@color/wikicleta_blue"
           android:textSize="13sp"
           android:textAlignment="center"
           android:gravity="center" />
        
	</LinearLayout> 
	<include layout="@layout/thin_separator" android:id="@+id/separator_simple" />
	<LinearLayout
	    android:orientation="vertical"
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    android:background="@color/wikicleta_white">
	    <LinearLayout
	        android:id="@+id/trip_more_info_container_button"
	    	android:orientation="vertical"
	    	android:layout_height="wrap_content"
	    	android:layout_width="match_parent"
	    	android:padding="10dp"
	    	android:clickable="true"
	    	android:background="@drawable/contact_item_selector">
			<TextView
	           android:id="@+id/trip_more_info"
	           android:layout_width="fill_parent"
	           android:layout_height="wrap_content"
	           android:text="@string/trip_details"
	           android:textColor="@color/wikicleta_blue"
	           android:textSize="13sp"
	           android:textAlignment="center"
	           android:gravity="center" />
        
		</LinearLayout>
	</LinearLayout>
	   
</LinearLayout>