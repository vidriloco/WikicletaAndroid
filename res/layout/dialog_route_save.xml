<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout 
	    android:id="@+id/titlebar"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:background="@color/wikicleta_white">
		    
		    <ImageView android:id="@+id/dialog_close"
		        android:contentDescription="@string/none"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/dialog_close_icon"/>
		    
		    <TextView
	           android:id="@+id/dialog_menu_title"
	           android:layout_width="fill_parent"
	           android:layout_height="wrap_content"
	           android:gravity="right"
	           android:layout_gravity="center_vertical"
	           android:text="@string/save_route"
	           android:textColor="@color/wikicleta_blue"
	           android:textSize="20sp"
	           android:padding="10dp"
	           android:layout_marginRight="20dp"
	           android:textStyle="bold" />
	</LinearLayout>
    
	<ScrollView
        android:id="@+id/routes_saving_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

		   <LinearLayout
		       android:layout_width="match_parent"
		       android:layout_height="292dp"
		       android:background="#fff"
		       android:orientation="vertical" >

            <EditText
                android:id="@+id/route_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="@string/routes_saving_form_name"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true" >
            </EditText>
            
            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:shadowRadius="1.3"
                android:layout_marginTop="20dp"
                android:text="@string/routes_saving_form_tags_instructions"
                android:textColor="#111"
                android:textSize="15sp" />
            <EditText
                android:id="@+id/route_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
				android:layout_marginTop="20dp"
                android:hint="@string/routes_saving_form_tags"
                android:inputType="textPostalAddress"
                android:maxLines="1"
                android:singleLine="true" />

            <Button
                android:id="@+id/save_route"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
				android:layout_marginTop="50dp"
				android:layout_marginBottom="20dp"
                android:text="@string/routes_saving_form_save" />
        	</LinearLayout>
        	        
    </ScrollView>
</LinearLayout>