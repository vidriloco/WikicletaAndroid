<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout 
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">

  <com.markupartist.android.widget.ActionBar
	    xmlns:app="http://schemas.android.com/apk/res/org.wikicleta"
	    android:id="@+id/actionbar"
	    app:title="@string/route_recording_section"
	    style="@style/ActionBar"/>

  <org.wikicleta.views.PinchableMapView
      android:id="@+id/mapview"
      android:layout_width="fill_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/actionbar"
      android:layout_marginTop="0dp"
      android:apiKey="0Sp8gbE2A7huBHKWXFaSnv0zQ4sNzPzWzqj9zcQ"
      android:clickable="true" />  
 <LinearLayout 
      android:id="@+id/gps_loading"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_centerHorizontal="true"
      android:layout_centerVertical="true"
      android:layout_marginTop="30dp"
      android:layout_below="@+id/actionbar"
      android:background="#fff">

     <ProgressBar
         android:id="@+id/progressBar1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:padding="10dp" />

      <TextView
          android:id="@+id/gps_text_loading"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:gravity="center"
          android:shadowRadius="1.3"
          android:padding="20dp"
          android:textStyle="bold"
          android:text="@string/waiting_for_gps"
          android:textColor="#111"
          android:textSize="12sp" />
 </LinearLayout>
  
 <LinearLayout
       android:id="@+id/stats_panel"
       android:layout_width="wrap_content"
       android:layout_height="80dp"
       android:orientation="horizontal"
       android:layout_centerHorizontal="true"
       android:layout_below="@+id/gps_loading"
       android:visibility="gone" >

        <RelativeLayout
            android:id="@+id/speed"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="#fff" >

            <TextView
                android:id="@+id/subtitle_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:shadowRadius="1.3"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="4dp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:text="@string/routes_stats_speed"
                android:textColor="#111"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/speed_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subtitle_speed"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:shadowRadius="1.3"
				android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/dashes"
                android:textColor="#111"
                android:textSize="18sp" />

        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/time_elapsed"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="#fff" >

            <TextView
                android:id="@+id/subtitle_time_elapsed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:shadowRadius="1.3"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="4dp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:text="@string/routes_stats_time"
                android:textColor="#111"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/time_elapsed_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subtitle_time_elapsed"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:shadowRadius="1.3"
                android:text="@string/dashes"
                android:textColor="#111"
                android:textSize="18sp" />

        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="#fff" >

            <TextView
                android:id="@+id/subtitle_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:shadowRadius="1.3"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="4dp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:text="@string/routes_stats_distance"
                android:textColor="#111"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/distance_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subtitle_distance"
                android:gravity="center"
				android:layout_centerHorizontal="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:shadowRadius="1.3"
                android:text="@string/dashes"
                android:textColor="#111"
                android:textSize="18sp" />

        </RelativeLayout>
  </LinearLayout>
  
 <LinearLayout
       android:id="@+id/route_recording_toolbar"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_alignParentBottom="true"
       android:gravity="center"
       android:background="@drawable/toolbar"
       android:padding="5dp"
       android:clickable="true" >
         <ImageView
            android:id="@+id/routes_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/nothing"
            android:src="@drawable/back_arrow"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:clickable="true" />
        <ImageView
            android:id="@+id/routes_pause_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/nothing"
            android:src="@drawable/pause"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:visibility="gone"
            android:clickable="true" />
        <ImageView
            android:id="@+id/routes_rec_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/nothing"
            android:src="@drawable/rec"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:clickable="true" />
        <ImageView
            android:id="@+id/routes_finish_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/nothing"
            android:src="@drawable/save"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:clickable="true" />
  </LinearLayout>

</RelativeLayout>