<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout 
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">


  <org.wikicleta.views.PinchableMapView
      android:id="@+id/mapview"
      android:layout_width="fill_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/actionbar"
      android:layout_above="@+id/bottom_panel_route_actions"
      android:apiKey="0Sp8gbE2A7huBHKWXFaSnv0zQ4sNzPzWzqj9zcQ"
      android:clickable="true" />
      <!-- android:apiKey="0Sp8gbE2A7htK9pPiFzcliDPP5WT0D_TSkooX1w" -->
  
  	<LinearLayout
       android:id="@+id/top_panel_route_status"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:padding="10dp"
       android:orientation="vertical"
       android:layout_marginTop="20dp"
       android:layout_centerHorizontal="true"
       android:layout_below="@+id/actionbar"
       android:background="#fff"
	   android:gravity="center">
       	<TextView
                android:id="@+id/route_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowRadius="1.3"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="1dp"
                android:textAllCaps="true"
                android:text="@string/none"
                android:textColor="#111"
                android:textStyle="bold"
                android:textSize="18sp" />
  	    <TextView
                android:id="@+id/route_not_saved_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowRadius="1.3"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="1dp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:text="@string/route_not_saved"
                android:textColor="#8C1D04"
                android:textSize="14sp"
                android:visibility="gone" />
  	</LinearLayout>
  	
    <LinearLayout
       android:id="@+id/top_panel_extra_route_info"
       android:layout_width="wrap_content"
       android:layout_height="60dp"
       android:orientation="horizontal"
       android:layout_marginTop="10dp"
       android:layout_centerHorizontal="true"
       android:layout_below="@+id/top_panel_route_status"
       android:background="#fff"
       android:alpha="0.8" >

        <RelativeLayout
            android:id="@+id/speed"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp" >

            <TextView
                android:id="@+id/subtitle_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:shadowRadius="1.3"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="1dp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:text="16 km/h"
                android:textColor="#111"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/speed_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subtitle_speed"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:shadowRadius="1.3"
                android:text="@string/routes_details_speed"
                android:textColor="#111"
                android:textSize="10sp" />

        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/time_elapsed"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp" >

            <TextView
                android:id="@+id/subtitle_time_elapsed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:shadowRadius="1.3"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="1dp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:text="8.0/10"
                android:textColor="#111"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/time_elapsed_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subtitle_time_elapsed"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:shadowRadius="1.3"
                android:text="@string/routes_details_ranked"
                android:textColor="#111"
                android:textSize="10sp" />

        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp" >

            <TextView
                android:id="@+id/subtitle_checkins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:shadowRadius="1.3"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="1dp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:text="30"
                android:textColor="#111"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/distance_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subtitle_checkins"
                android:gravity="center"
				android:layout_centerHorizontal="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:shadowRadius="1.3"
                android:text="@string/routes_details_checkin"
                android:textColor="#111"
                android:textSize="10sp" />

        </RelativeLayout>
  </LinearLayout>
  
 <LinearLayout
     android:id="@+id/bottom_panel_route_actions"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     android:layout_alignParentBottom="true"
     android:gravity="center"
     android:background="@drawable/toolbar"
     android:padding="5dp"
     android:clickable="true" >
      
      <ImageView
          android:id="@+id/map_layers_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:contentDescription="@string/nothing"
          android:src="@drawable/layers"
          android:layout_marginRight="25dp"
          android:layout_marginLeft="15dp"
          android:clickable="true" />
      <ImageView
          android:id="@+id/map_check_in_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:contentDescription="@string/nothing"
          android:src="@drawable/check_in"
          android:layout_marginRight="5dp"
          android:layout_marginLeft="5dp"
          android:clickable="true" />
      <ImageView
          android:id="@+id/map_rank_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:contentDescription="@string/nothing"
          android:src="@drawable/comment"
          android:layout_marginRight="5dp"
          android:layout_marginLeft="5dp"
          android:clickable="true" />
      <ImageView
          android:id="@+id/map_favorite_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:contentDescription="@string/nothing"
          android:src="@drawable/favorite"
          android:layout_marginRight="5dp"
          android:layout_marginLeft="5dp"
          android:clickable="true" />
  </LinearLayout>

</RelativeLayout> 